<Window x:Class="_12A_Tetris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12A_Tetris"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" WindowState="Maximized">
    <Window.Resources>
        <LinearGradientBrush x:Key="WindowBackround" StartPoint="0,0.5" EndPoint="1,0.5">
            <GradientStop Color="Black" Offset="0.0" />
            <GradientStop Color="Purple" Offset="0.2" />
            <GradientStop Color="Purple" Offset="0.5" />
            <GradientStop Color="Purple" Offset="0.8" />
            <GradientStop Color="Black" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Resources>
    <Window.Background>
        <StaticResource ResourceKey="WindowBackround"/>
    </Window.Background>
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="gameGrid" Grid.Column="1" Margin="10" Background="IndianRed">
            
        </Grid>
        <Grid x:Name="nextBlockGrid" Grid.Column="2" Background="LightBlue" Width="400" Height="200" VerticalAlignment="Top" Margin="0,50,0,0">
            
        </Grid>
    </Grid>
</Window>
